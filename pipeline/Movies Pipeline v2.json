{
	"name": "Movies Pipeline v2",
	"properties": {
		"activities": [
			{
				"name": "Blob to SQL",
				"type": "Copy",
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"typeProperties": {
					"source": {
						"type": "BlobSource",
						"recursive": true
					},
					"sink": {
						"type": "SqlSink",
						"writeBatchSize": 10000,
						"sqlWriterStoredProcedureName": "[dbo].[MergeMovies]",
						"sqlWriterTableType": "MovieSummaryType"
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"columnMappings": {
							"id": "OriginalMovieId",
							"title": "Title",
							"subtitle": "Subtitle",
							"summary": "Summary"
						}
					}
				},
				"inputs": [
					{
						"referenceName": "MoviesBlob",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "MoviesSql",
						"type": "DatasetReference"
					}
				]
			}
		]
	}
}